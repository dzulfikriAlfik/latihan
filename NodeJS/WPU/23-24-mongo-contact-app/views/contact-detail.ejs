<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Contact not found! <a href="/contact" class="alert-link fw-light">
          <br>
          &laquo; Back
        </a>
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.phone %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.name %>" class="btn btn-dark badge">Edit</a>
          <form action="/contact?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure?')" class="d-inline-block">
            <input type="hidden" name="_id" value="<%= contact._id %>">
            <button type="submit" class="btn btn-danger badge">Delete</button>
          </form>
          <a href="/contact" class="card-link d-block mt-3">&laquo; Back</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>